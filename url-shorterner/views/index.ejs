<body>
    <div class="container">
    <h1>URL SHRINKER</h1>
    <form action="/shortUrls", method="POST" class="my-4 form-inline">
        <label for="fullUrl" class="sr-only">Enter Url</label>
        <input required placeholder="URL" type="url", id="fullUrl",name="fullUrl",
        class="form-control col mr-2">
        <button class="btn btn-success" type="submit"> Shrink URL</button>
    </form>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>FULL URL</th>
                <th>SHORT URL</th>
                <th>CLICKS</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><a href="https://courses.webdevsimplified.com">
                    https://courses.webdevsimplified.com</a></td>
                    <td><a href="/123456">123456</a></td>
                    <td>10</td>
            </tr>
        </tbody>
    </table>
</div>
</body>
</html>